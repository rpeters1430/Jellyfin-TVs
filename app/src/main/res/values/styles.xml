<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="Theme.JellyfinTV" parent="@style/Theme.Leanback">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        
        <!-- Leanback theme customizations -->
        <item name="playbackControlsButtonStyle">@style/Widget.Leanback.PlaybackControlsButton</item>
        <item name="playbackControlsActionIcons">@style/Widget.Leanback.PlaybackControlsActionIcons</item>
        <item name="playbackControlsButtonLabelStyle">@style/Widget.Leanback.PlaybackControlsButton.Label</item>
        <item name="playbackControlsTimeStyle">@style/Widget.Leanback.PlaybackControlsTime</item>
        
        <!-- Brand colors -->
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>
    </style>

    <!-- Player theme -->
    <style name="Theme.JellyfinTV.Player" parent="@style/Theme.Leanback">
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:colorBackground">@android:color/black</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Login theme -->
    <style name="Theme.JellyfinTV.Login" parent="@style/Theme.Leanback">
        <item name="android:windowBackground">@drawable/login_background</item>
        <item name="android:colorBackground">@color/colorPrimary</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Text appearance styles -->
    <style name="TextAppearance.Leanback.Title" parent="@android:style/TextAppearance.DeviceDefault.Large">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">normal</item>
        <item name="android:shadowColor">@color/black_50</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="TextAppearance.Leanback.Subtitle" parent="@android:style/TextAppearance.DeviceDefault.Medium">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white_50</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:shadowColor">@color/black_50</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <!-- Button styles -->
    <style name="Widget.Leanback.Button" parent="@android:style/Widget.Leanback.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">64dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="Widget.Leanback.Button.Primary" parent="Widget.Leanback.Button">
        <item name="android:background">@drawable/button_primary_background</item>
    </style>

    <style name="Widget.Leanback.Button.Secondary" parent="Widget.Leanback.Button">
        <item name="android:background">@drawable/button_secondary_background</item>
    </style>

    <!-- Card styles -->
    <style name="Widget.Leanback.Card" parent="@android:style/Widget.Leanback.Base.CardView">
        <item name="cardBackground">@drawable/card_background</item>
        <item name="cardType">elevated</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardMaxElevation">@dimen/card_elevation</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="contentPadding">@dimen/card_content_padding</item>
    </style>

    <!-- Progress bar styles -->
    <style name="Widget.Leanback.ProgressBar" parent="@android:style/Widget.Leanback.ProgressBar">
        <item name="android:indeterminateTint">@color/colorPrimary</item>
        <item name="android:indeterminateTintMode">src_in</item>
    </style>

    <!-- Playback controls styles -->
    <style name="Widget.Leanback.PlaybackControls" parent="">
        <item name="android:background">@color/player_controls_background</item>
    </style>

    <style name="Widget.Leanback.PlaybackControlsButton" parent="@android:style/Widget.Leanback.PlaybackControlsButton">
        <item name="android:background">@drawable/playback_controls_button_background</item>
        <item name="android:tint">@color/player_controls_text</item>
    </style>

    <style name="Widget.Leanback.PlaybackControlsActionIcons" parent="">
        <item name="android:tint">@color/player_controls_text</item>
    </style>

    <style name="Widget.Leanback.PlaybackControlsButton.Label" parent="@android:style/TextAppearance.Leanback.PlaybackControlButtonLabel">
        <item name="android:textColor">@color/player_controls_text</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Widget.Leanback.PlaybackControlsTime" parent="@android:style/TextAppearance.Leanback.PlaybackControlTimeLabel">
        <item name="android:textColor">@color/player_controls_text</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Search view styles -->
    <style name="Widget.Leanback.SearchView" parent="@android:style/Widget.Leanback.SearchView">
        <item name="android:background">@drawable/search_background</item>
        <item name="android:queryBackground">@android:color/transparent</item>
        <item name="android:searchIcon">@drawable/ic_search</item>
        <item name="android:closeIcon">@drawable/ic_close</item>
        <item name="android:goIcon">@drawable/ic_search</item>
        <item name="android:searchHintIcon">@drawable/ic_search</item>
        <item name="android:voiceIcon">@drawable/ic_voice_search</item>
        <item name="android:commitIcon">@drawable/ic_commit_search</item>
        <item name="android:queryTextColor">@color/white</item>
        <item name="android:queryHint">@string/search_hint</item>
        <item name="android:defaultQueryHint">@string/search_hint</item>
        <item name="android:searchHintIconTint">@color/white_50</item>
        <item name="android:searchIconTint">@color/white</item>
        <item name="android:closeIconTint">@color/white</item>
        <item name="android:goIconTint">@color/white</item>
        <item name="android:voiceIconTint">@color/white</item>
        <item name="android:commitIconTint">@color/white</item>
        <item name="android:searchPlateTint">@android:color/transparent</item>
    </style>
</resources>
